@model Mettal.Models.ViewModels.SlideViewModel
    
@using (Ajax.BeginForm("Update", new AjaxOptions { UpdateTargetId = "slide-" + Model.Id, InsertionMode = InsertionMode.Replace, HttpMethod = "PUT" }))
{
    @Html.AntiForgeryToken()

    <div class="form-inline">
        <div class="form-group col-md-6">
            @Html.HiddenFor(modelItem => Model.Id)
            @Html.TextAreaFor(modelItem => Model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.CheckBoxFor(modelItem => Model.IsHidden)
        </div>
    </div>

    <div class="text-right col-md-6">
        <input type="submit" class="btn btn-success" value="Сохранить" />
    </div>
}
