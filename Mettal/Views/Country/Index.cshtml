@using Mettal.Models.ViewModels
@model Mettal.Models.ViewModels.CountryView

@{
    ViewBag.Title = "Страны";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="container">

        <h1 class="text-center">@ViewBag.Title</h1>

        @Html.Partial("_CountryCreate", new CountryViewModel())

        <div id="country-list">
            @Html.Partial("_CountryList", Model.Countries)
        </div>

    </div>
</section>