@model Mettal.Models.ViewModels.CountryViewModel

@using (Ajax.BeginForm("Create", new AjaxOptions { UpdateTargetId = "country-list", InsertionMode = InsertionMode.Replace, OnSuccess = "$('#country-create-input').val('');" })) 
{
    @Html.AntiForgeryToken()

    <h3>Добавление новой записи</h3>

    <div class="row">
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label sr-only col-md-4" })
            <div class="col-md-5">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", id = "country-create-input", required = "required" } })
            </div>
            <div class="col-md-1">
                <button type="submit" class="btn btn-default">Добавить</button>
            </div>
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>
}